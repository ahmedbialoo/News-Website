@model user_data
@{
    ViewBag.Title = "create";
}

<h2>Register</h2>
<div class="form-group">
    <form method="post" enctype="multipart/form-data">
        @Html.HiddenFor(n=>n.user_id)

        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.user_name)</div>
            <div class="col-md-5">@Html.TextBoxFor(n => n.user_name, new { @class = "form-control" })</div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.user_name)</div>
        </div>
        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.password)</div>
            <div class="col-md-5">@Html.PasswordFor(n => n.password, new { @class = "form-control" })</div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.password)</div>
        </div>
        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.confirm_password)</div>
            <div class="col-md-5">@Html.PasswordFor(n => n.confirm_password, new { @class = "form-control" })</div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.confirm_password)</div>
        </div>

        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.age)</div>
            <div class="col-md-5">@Html.TextBoxFor(n => n.age, new { @class = "form-control" })</div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.age)</div>
        </div>
        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.adress)</div>
            <div class="col-md-5">@Html.TextBoxFor(n => n.adress, new { @class = "form-control" })</div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.adress)</div>
        </div>
        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.email)</div>
            <div class="col-md-5">@Html.TextBoxFor(n => n.email, new { @class = "form-control" })</div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.email)</div>
        </div>
        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.photo)</div>
            <div class="col-md-5 form-control"><input type="file" name="photo" /></div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.photo)</div>
        </div>

        <div class="row">
            <div class="col-md-3">@Html.LabelFor(n => n.cv)</div>
            <div class="col-md-5 form-control"><input type="file" name="cv" /></div>
            <div class="col-md-3">@Html.ValidationMessageFor(n => n.cv)</div>
        </div>
        
       
        <input type="submit" class="btn btn-info" value="Create" />
    </form>
</div>


@section scripts {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
